<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="prodcastd.prodcast.samayu.com.prodcastd">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/distribution_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/p_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Home" />
        <activity android:name=".CustomersActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.samayu.prodcast.prodcastd.ui.CustomerListActivity" />
        <activity android:name=".CustomerPasswordActivity" />
        <activity android:name=".OrderEntry" />
        <activity android:name=".OutstandingbillsPayment" />
        <activity android:name=".Payment" />
        <activity android:name=".CheckNumber" />
        <activity android:name=".CreditCardDetails" />
        <activity android:name=".NewOrder" />
        <activity android:name=".MainMenu" />
        <activity
            android:name=".ProdcastBaseActivity"
            android:label="@string/title_activity_prodcast_base"
            android:theme="@style/AppTheme">
            android:name="com.samayu.prodcast.prodcastd.ui.CustomerListActivity"
            android:label="@string/title_customer_list"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name="com.samayu.prodcast.prodcastd.ui.CustomerCreateEditActivity"
            android:label="@string/title_activity_customer_create_edit"
            android:theme="@style/AppTheme" />
    </application>

</manifest>