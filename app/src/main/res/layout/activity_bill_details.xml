<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dip" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:padding="8dp"
                android:layout_weight="1"
                android:background="@color/headerBackground"
                style="@style/TableHeader"
                android:text="Distributor"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:padding="8dp"
                android:layout_weight="1"
                android:background="@color/headerBackground"
                style="@style/TableHeader"
                android:text="Customer"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/distName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/border_billdetailsmid"
                android:gravity="center"
                android:padding="3dp"
                android:layout_weight="1"

                />

            <TextView
                android:id="@+id/custName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/border_billdetailsend"
                android:gravity="center"
                android:padding="3dp"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/distAddress"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/border_billdetailsmid"
                android:gravity="center"
                android:padding="3dp"
                android:layout_weight="1"

                />

            <TextView
                android:id="@+id/custAddress"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/border_billdetailsend"
                android:gravity="center"
                android:padding="3dp"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/distAddress1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/border_billdetailsmid"
                android:gravity="center"
                android:padding="3dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/custAddress1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/border_billdetailsend"
                android:gravity="center"
                android:padding="3dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/distPhonenumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/border_billdetailsmid"
                android:gravity="center"
                android:padding="3dp"
                android:layout_weight="1"

                />

            <TextView
                android:id="@+id/custPhonenumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/border_billdetailsend"
                android:gravity="center"
                android:padding="3dp"
                android:layout_weight="1"
                />

        </LinearLayout>

        <!-- 1St Table End-->

        <!-- 2ND Table sTART-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="fill"
                android:layout_marginTop="20dp"
                android:padding="3dp"
                android:layout_weight="1"
                android:text="Order No :"/>

            <TextView
                android:id="@+id/orderNo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:layout_marginTop="20dp"
                android:padding="3dp"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="fill"
                android:padding="3dp"
                android:layout_weight="1"
                android:text="Bill Date:"

                />

            <TextView
                android:id="@+id/billDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:padding="3dp"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="fill"
                android:padding="3dp"
                android:layout_weight="1"
                android:text="Sales Rep :"
                />

            <TextView
                android:id="@+id/salesRep"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:padding="3dp"
                android:layout_weight="1"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="fill"
                android:padding="3dp"
                android:layout_weight="1"
                android:text="Discount :"
                />

            <TextView
                android:id="@+id/discount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:padding="3dp"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="fill"
                android:padding="3dp"
                android:layout_weight="1"
                android:text="Total  :"
                />

            <TextView
                android:id="@+id/total"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:padding="3dp"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="fill"
                android:padding="3dp"
                android:layout_weight="1"
                android:text="Balance  :"
                />

            <TextView
                android:id="@+id/balance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:padding="3dp"
                android:layout_weight="1"
                />

        </LinearLayout>



        <ExpandableListView
            android:id="@+id/expandableBillDetailsEntryList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft">

        </ExpandableListView>
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/newOrderPin"
        app:srcCompat="@drawable/ic_prodcast_print"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
