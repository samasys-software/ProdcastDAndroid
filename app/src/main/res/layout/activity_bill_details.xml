<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/orderNo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:padding="3dp"
                android:text="Order No: "
                android:layout_weight="1" />


            <TextView
                android:id="@+id/custName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/border_fourside"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:padding="3dp"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/billDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:padding="3dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Bill Date: "
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/custAddress1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/border_billdetailsend"
                android:gravity="left"
                android:padding="3dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/discount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:padding="3dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Discount: "
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/custAddress2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/border_billdetailsend"
                android:gravity="left"
                android:padding="3dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:padding="3dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Total: "

                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/custAddress3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/border_billdetailsend"
                android:gravity="left"
                android:textColor="@color/colorPrimaryDark"
                android:padding="3dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/balance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:padding="3dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Balance: "
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/custPhonenumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/border_billdetailsend"
                android:gravity="left"
                android:textColor="@color/colorPrimaryDark"
                android:padding="3dp"
                android:layout_weight="1"
                />

        </LinearLayout>

        <!-- 1St Table End-->

        <!-- 2ND Table sTART-->













        <ExpandableListView
            android:id="@+id/expandableBillDetailsEntryList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft">

        </ExpandableListView>
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/newOrderPin"
        app:srcCompat="@drawable/ic_prodcast_print"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
