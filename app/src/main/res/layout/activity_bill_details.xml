<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dip" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_weight="1"

                    android:text="Distributor"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_weight="1"

                    android:text="Customer"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/distName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_weight="1"

                    />

                <TextView
                    android:id="@+id/custName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/distAddress"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_weight="1"

                    />

                <TextView
                    android:id="@+id/custAddress"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/distAddress1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/custAddress1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/distPhonenumber"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_weight="1"

                    />

                <TextView
                    android:id="@+id/custPhonenumber"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <!-- 1St Table End-->

            <!-- 2ND Table sTART-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="fill"
                    android:layout_marginTop="20dp"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:text="Order No :"/>

                <TextView
                    android:id="@+id/orderNo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:layout_marginTop="20dp"
                    android:padding="3dp"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="fill"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:text="Bill Date:"

                    />

                <TextView
                    android:id="@+id/billDate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:padding="3dp"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="fill"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:text="Sales Rep :"
                    />

                <TextView
                    android:id="@+id/salesRep"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:padding="3dp"
                    android:layout_weight="1"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="fill"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:text="Discount :"
                    />

                <TextView
                    android:id="@+id/discount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:padding="3dp"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="fill"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:text="Total  :"
                    />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:padding="3dp"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="fill"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:text="Balance  :"
                    />

                <TextView
                    android:id="@+id/balance"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:padding="3dp"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <!-- 2ND Table End-->

            <!-- 3RD Table End-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="Order Details" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_weight="2"

                    android:text="Product"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_weight="0.5"

                    android:text="Qty"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:text="Price "/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:text="Sales Tax "/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:text="Other Tax "/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:text="Sub Total "/>

            </LinearLayout>

            <ListView
                android:id="@+id/orderEntriesAdapter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>
            <LinearLayout
                android:id="@+id/llpayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="Payment Details" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_weight="0.9"
                    android:text="Date"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_weight="2"
                    android:text="Received By"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:text="Amount"/>

            </LinearLayout>

            <ListView
                android:id="@+id/paymentEntriesAdapter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>
        </LinearLayout>

</RelativeLayout>
