<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="prodcastd.prodcast.samayu.com.prodcastd.NewOrder"
    android:fillViewport="true"
    >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/llProductSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <AutoCompleteTextView
        android:id="@+id/productSearch"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/etQuantity"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:inputType="number"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:srcCompat="@android:drawable/ic_input_add"/>
    </LinearLayout>
    <LinearLayout

        android:id="@+id/linearMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:weightSum="1">


        <TextView
            android:id="@+id/tvProduct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0.55"
            android:gravity="center"
            android:text="Product"
            android:textAlignment="center"
            android:textColor="#629a1e"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvQuanty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0.20"
            android:gravity="center"
            android:text="Qty"
            android:textAlignment="center"
            android:textColor="#629a1e"
            android:textSize="16sp"

            android:textStyle="bold" />



        <TextView
            android:id="@+id/bSubTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="0dp"
            android:layout_weight="0.20"
            android:text="Sub Total"
            android:textColor="#629a1e"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>
    <ListView
        android:id="@+id/productList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"

        android:listSelector="@drawable/bill_bg" />


    <LinearLayout
        android:id="@+id/llTotal"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tvTax"
            android:layout_width="167dp"
            android:layout_height="29dp"
            android:layout_marginLeft="50dp"
            android:gravity="right"
            android:text="Tax"
            android:textColor="#629a1e"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/displayTax"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_marginLeft="30dp"
            android:gravity="right"
            android:textColor="#629a1e"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="167dp"
            android:layout_height="29dp"
            android:layout_marginLeft="50dp"
            android:gravity="right"
            android:text="Total"
            android:textColor="#629a1e"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/displayTotal"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_marginLeft="30dp"
            android:gravity="right"
            android:textColor="#629a1e"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llDiscount"
        android:orientation="horizontal"
        android:weightSum="1">
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/discountType"
            android:layout_weight="0.60"></Spinner>

        <EditText
            android:id="@+id/discountValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:hint="Discount Value"
            android:layout_weight="0.27" />


    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/discountButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/log_in_button"
                android:layout_marginLeft="125dp"
                android:text="Apply Discount" />
        </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/log_in_button"
        android:layout_marginTop="100dp"
        android:text="Save Order" />

    </LinearLayout>
</ScrollView>


