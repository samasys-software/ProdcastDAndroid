<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rllay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_store"
    tools:context="prodcastd.prodcast.samayu.com.prodcastd.com.samayu.prodcast.prodcastd.ui.PaymentActivity">

    <TextView
        android:id="@+id/amounttv"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp"
        android:text="Total Amount"
        android:textColor="#345904"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/cash"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/amounttv"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:layout_marginTop="28dp"
        android:hint="Enter the Amount"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:textColor="#a4a4a3"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/payment"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:text="Payment Type"
        android:textColor="#345904"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_above="@+id/paymentType"
        android:layout_alignStart="@+id/amounttv"
        android:layout_marginBottom="40dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/paymentType"
        android:hint="Cash"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:scrollbarStyle="insideOverlay"/>

    <Button
        android:id="@+id/pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/paymentType"
        android:layout_marginStart="22dp"
        android:layout_marginTop="102dp"
        android:background="@drawable/log_in_button"
        android:elevation="18dp"
        android:text="Pay"
        android:textColor="#fff" />

    <Button
        android:id="@+id/newOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pay"
        android:layout_toEndOf="@+id/payment"
        android:background="@drawable/log_in_button"
        android:elevation="18dp"
        android:text="New Order"
        android:textColor="#fff"/>




</RelativeLayout>
