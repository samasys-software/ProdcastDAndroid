<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:orientation="vertical">

            <TextView
                android:visibility="gone"
                android:id="@+id/reports"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reports" />

            <TextView
                android:visibility="gone"
                android:id="@+id/selectDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:text="Select Report Date" />

            <Spinner
                android:id="@+id/selectReportDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:minHeight="40dp">

            </Spinner>
            <LinearLayout
                android:id="@+id/btnCalendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">

                <TextView
                    android:id="@+id/startDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Date"
                    android:layout_weight="1.72" />

                <DatePicker
                    android:visibility="gone"
                    android:id="@+id/startDatePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.72" />

                <TextView
                    android:id="@+id/endDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.72"
                    android:text="End Date"/>

                <DatePicker
                    android:visibility="gone"
                    android:id="@+id/endDatePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.72" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_margin="10dp">

                <Button
                    android:id="@+id/refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="center"
                    style="@style/submitButton"
                    android:text="Refresh Report"/>

                </LinearLayout>

            <TextView
                android:id="@+id/summarytext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Summary" />

            <LinearLayout
                android:id="@+id/summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/summarytext"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:background="@drawable/border_headerends"
                    >

                <TextView
                    android:id="@+id/sales"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style = "@style/TableHeader"
                    android:text="Sales"/>

                    <TextView
                        android:id="@+id/salesCurrency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style = "@style/TableHeader"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:background="@drawable/border_headerends"
                    >
                <TextView
                    android:id="@+id/collection"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/TableHeader"
                    android:text="Collection"/>

                    <TextView
                        android:id="@+id/collectionsCurrency"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        style="@style/TableHeader"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/border_headerends"

                    android:layout_weight="2">
                <TextView
                    android:id="@+id/balance"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style = "@style/TableHeader"
                    android:text="Balance"
                    />

                    <TextView
                        android:id="@+id/balancesCurrency"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        style = "@style/TableHeader"
                       />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/salesSummaryHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/sale"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:background="@drawable/border_entryends"
                    style="@style/TableEntry"
                    android:text="Sale"
                     />


                <TextView
                    android:id="@+id/collections"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:background="@drawable/border_entrymiddle"
                    style="@style/TableEntry"
                    android:text="Collections"
                    />

                <TextView
                    android:id="@+id/balances"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:background="@drawable/border_entrymiddle"
                    style="@style/TableEntry"
                    android:text="Balances"
                     />

            </LinearLayout>


            <ExpandableListView
                android:id="@+id/expandableSalesList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:groupIndicator="@null"
                >

            </ExpandableListView>



        </LinearLayout>

</LinearLayout>
