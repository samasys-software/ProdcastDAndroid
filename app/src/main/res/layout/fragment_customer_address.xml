<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ffCstomerAddress"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    tools:context="com.samayu.prodcast.prodcastd.ui.CustomerAddressFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        >



        <android.support.design.widget.TextInputLayout
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_width="0dp"
            android:layout_weight="4"
            >


            <EditText
                android:id="@+id/unitNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:hint="Unit Number"
                android:background="@drawable/border_textbox"/>


        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/currentLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_location"
            android:layout_gravity="end|center"
            android:gravity="center"/>


    </LinearLayout>

    <android.support.design.widget.TextInputLayout

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >

        <EditText
            android:id="@+id/billingAddress1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"

            android:inputType="textPersonName"
            android:hint="Billing Address1"
            android:background="@drawable/border_textbox"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >

        <EditText
            android:id="@+id/billingAddress2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"

            android:inputType="textPersonName"
            android:hint="Billing Address2"
            android:background="@drawable/border_textbox"/>
    </android.support.design.widget.TextInputLayout>




    <android.support.design.widget.TextInputLayout

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >

        <EditText
            android:id="@+id/billingAddress3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"

            android:inputType="textPersonName"
            android:hint="Billing Address3"
            android:background="@drawable/border_textbox"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >

        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"

            android:inputType="textPersonName"
            android:hint="City"
            android:background="@drawable/border_textbox"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >

        <EditText
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"

            android:inputType="textPersonName"
            android:hint="State"
            android:background="@drawable/border_textbox"/>
    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_textbox"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"

        >
    <Spinner
        android:id="@+id/country"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="5dp"

        />

    </LinearLayout>
    <android.support.design.widget.TextInputLayout

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >

        <EditText
            android:id="@+id/postalCode"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"

            android:inputType="textPersonName"
            android:hint="Postal Code"
            android:background="@drawable/border_textbox"/>
    </android.support.design.widget.TextInputLayout>
     <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
         android:layout_marginTop="10dp">

          <Button
              android:id="@+id/reset1"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              style="@style/submitButton"
              android:text="RESET"/>

          <Button
              android:id="@+id/next1"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              style="@style/submitButton"
              android:text="Next"/>


      </LinearLayout>


</LinearLayout>
