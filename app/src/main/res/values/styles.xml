<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAppearance">@style/ProdcastFonts</item>
        <item name="android:editTextStyle">@style/editText</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>

    <style name="ProdcastFonts">
        <item name="android:typeface">serif</item>
    </style>

    <style name="TableHeader" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorInversePrimary</item>

        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="TableEntry" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:paddingTop">4pt</item>
        <item name="android:paddingBottom">4pt</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:padding">2dp</item>

    </style>

    <style name="AlertTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorInversePrimary</item>
        <item name="android:paddingTop">4pt</item>
        <item name="android:paddingBottom">4pt</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>

    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorInversePrimary</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlertTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorInversePrimary</item>
        <item name="android:editTextStyle">@style/editText</item>


    </style>


    <style name="editText" parent="@android:style/Widget.EditText">
        <!-- Customize your theme here. -->

        <item name="android:background">@drawable/form_box</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>

        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:ems">10</item>

        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_gravity">center</item>


    </style>


    <style name="submitButton">

        <!-- Customize your theme here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorInversePrimary</item>

        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>


        <item name="android:fontFamily">serif</item>

    </style>

    <style name="datePicker">
        <!-- Customize datepicker Textview -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>


    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="PopupMenuItem">
        <!-- Change Overflow Menu ListView Item Height & Property -->
        <item name="android:listPreferredItemHeightSmall">20dp</item>
    </style>

</resources>